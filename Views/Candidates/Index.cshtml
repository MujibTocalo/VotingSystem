@model IEnumerable<VotingSystem.Data.Candidates>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Candidates</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var positions in ViewBag.Positions)
{
    <h2>@positions.name</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Organization</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in ViewBag.Candidates)
            {
                @if (candidate.positionId == positions.id)
                {
                    <tr>
                        <td>@candidate.name</td>
                        <td>@candidate.organizationId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@candidate.name">Edit</a> |
                        <a asp-action="Details" asp-route-id="@candidate.name">Details</a> |
                        <a asp-action="Delete" asp-route-id="@candidate.name">Delete</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
}
