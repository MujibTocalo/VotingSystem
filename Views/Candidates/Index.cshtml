@model IEnumerable<VotingSystem.Data.Candidates>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white" style="text-align:center">Candidates</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var positions in ViewBag.Positions)
{
    <h2 class="bg-info text-white">@positions.name</h2>

    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Organization</th>
                <th>Votes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in ViewBag.Candidates)
            {
                @if (candidate.positionId == positions.id)
                {
                    <tr>
                        <td>@candidate.name</td>
                        <td>@candidate.organization.name</td>
                        <td>@candidate.votes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@candidate.id" class="btn btn-sm btn-outline-primary">Edit</a> 
                        <a asp-action="Details" asp-route-id="@candidate.id" class="btn btn-sm btn-outline-info">Details</a> 
                        <a asp-action="Delete" asp-route-id="@candidate.id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
}
