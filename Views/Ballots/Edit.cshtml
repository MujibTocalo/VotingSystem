@model VotingSystem.Data.Ballots

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h1 class="bg-info text-white" style="border-top-left-radius:10px; border-top-right-radius:10px; text-align:center;">Edit</h1>

    <h4>Ballots</h4>

<hr />
<div class="table table-sm table-bordered" style="border-radius:12px">
    <div class="col-md-4"> 
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="votersId" class="control-label"></label>
                <select asp-for="votersId" class="form-control" asp-items="ViewBag.votersId"></select>
                <span asp-validation-for="votersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="candidateId" class="control-label"></label>
                <input asp-for="candidateId" class="form-control" />
                <span asp-validation-for="candidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="positionId" class="control-label"></label>
                <input asp-for="positionId" class="form-control" />
                <span asp-validation-for="positionId" class="text-danger"></span><a></a>
            </div>
            <div class="form-group">
                <label asp-for="organizationId" class="control-label"></label>
                <input asp-for="organizationId" class="form-control" />
                <span asp-validation-for="organizationId" class="text-danger"></span>
            </div>
            
        </form>
    </div>
</div>

<div class="form-group">
    <input type="submit" value="Save" class="btn btn-outline-success" />
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
