@model IEnumerable<VotingSystem.Data.Admins>

@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-info text-white" style="text-align:center; border-radius:5px;">Index</h1>

<p>
    <a asp-action="Create" >Create New</a>
</p>
<table class="table table-sm table-striped table-bordered" style="border-radius: 12px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-outline-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
